<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCE5EB"
    tools:context=".CrearProyectoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#196163"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card contenedor principal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título de la sección -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crear Proyecto"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#196163"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresa la información básica de tu nuevo proyecto"
                        android:textSize="14sp"
                        android:textColor="#6FA8BF"
                        android:layout_marginBottom="24dp" />

                    <!-- Campo Nombre del Proyecto -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:startIconDrawable="@drawable/ic_title"
                        app:startIconTint="#196163"
                        app:boxStrokeColor="#196163"
                        app:hintTextColor="#196163"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTituloProyecto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del Proyecto (Requerido)"
                            android:textColor="#196163"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:inputType="textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Descripción -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        app:startIconDrawable="@drawable/ic_description"
                        app:startIconTint="#6FA8BF"
                        app:boxStrokeColor="#6FA8BF"
                        app:hintTextColor="#6FA8BF"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescripcionProyecto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Descripción (Opcional)"
                            android:textColor="#196163"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:lines="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Guardar -->
                    <Button
                        android:id="@+id/btnGuardarProyecto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guardar Proyecto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:backgroundTint="#196163"
                        android:textColor="@android:color/white"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>