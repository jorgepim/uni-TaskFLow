<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Header con título y porcentaje -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTituloProyecto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del Proyecto"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#196163"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tvPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6FA8BF"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Información de tareas y usuarios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#6FA8BF"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvTotalTareasProyecto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 tareas"
                android:textSize="13sp"
                android:textColor="#6FA8BF" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#9AC7D9"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvUsuariosAsignados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 usuarios"
                android:textSize="13sp"
                android:textColor="#9AC7D9" />

        </LinearLayout>

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progressBarProyecto"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="50"
            android:progressTint="#6FA8BF"
            android:progressBackgroundTint="#DCE5EB" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>